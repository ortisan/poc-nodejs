    "@opentelemetry/semantic-conventions": "^1.18.1",
    "@opentelemetry/tracing": "^0.24.0",
    "@prisma/client": "^5.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "nestjs-pino": "^3.5.0",
    "pino": "^8.16.2",
